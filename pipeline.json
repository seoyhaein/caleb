{
  "name": "Pipeline A",
  "globalFiles": {
    "executorShell": "./executor.sh",
    "dockerfilePath": "./Dockerfile",
    "healthcheckShell": "./healthcheck.sh",
    "installShell": "./install.sh",
    "userScriptShell": "./scripts/user_script.sh"
