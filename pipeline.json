      "nodeId": "1",
      "type": "pair",
      "pair": {
        "image": {
          "id": "img1",
          "sourceImageName": "",
          "targetImageName": "",
          "imageSavePath": "./images/1/"
        },
        "container": {
          "buildSettings": {
            "workDir": "/app",
            "directories": ["/app", "/app/scripts"],
            "scriptMap": {
              "/app": ["./executor.sh", "./healthcheck.sh", "./install.sh"],
              "/app/scripts": ["./scripts/user_script.sh"]
            },
            "permissionFiles": [
              "/app/executor.sh",
              "/app/install.sh",
              "/app/healthcheck.sh",
              "/app/scripts/user_script.sh"
            ],
            "cmd": ["/bin/sh", "-c", "/app/executor.sh"],
            "resources": {
              "cpuShares": 1024,
              "memory": "512m",
              "memorySwap": "1g",
              "pidsLimit": 100
            },
            "volumes": [
              {
                "hostPath": "/data/pipelineA/node1/output",
